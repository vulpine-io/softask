{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "login-auth-payload",
  "title": "Login Authentication Payload",
  "description": "Authentication body for login requests.",
  "type": "object",
  "properties": {
    "email": {
      "title": "User Email Address",
      "type": "string",
      "format": "email"
    },
    "password": {
      "title": "User Password",
      "type": "string",
      "minLength": 8
    }
  },
  "required": [
    "email",
    "password"
  ],
  "additionalProperties": false,
  "example": {
    "email": "foobar@softask.app",
    "password": "N4hMGU*Byr77@m2!"
  }
}